# VM Deployment Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=mongodb://your-mongodb-connection-string

# JWT Secret (use a strong secret in production)
JWT_SECRET=your-strong-jwt-secret-here

# Frontend URLs for VM deployment
# Replace YOUR_VM_IP with your actual VM's public IP address
NEXT_PUBLIC_API_URL=http://YOUR_VM_IP:3001
NEXT_PUBLIC_WS_URL=ws://YOUR_VM_IP:8080

# Backend CORS configuration
FRONTEND_URL=http://YOUR_VM_IP:3000

# Example for IP 35.172.146.68:
# NEXT_PUBLIC_API_URL=http://35.172.146.68:3001
# NEXT_PUBLIC_WS_URL=ws://35.172.146.68:8080
# FRONTEND_URL=http://35.172.146.68:3000